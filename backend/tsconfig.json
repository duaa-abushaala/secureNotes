{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "ESNext", 
    "moduleResolution": "node", 
    "esModuleInterop": true, 
    "skipLibCheck": true,  
    "strict": true, 
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["./src/**/*.ts", "./types/**/*.d.ts"],
  "exclude": ["node_modules"] 
}
